<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_2"
    tools:context=".SecondActivity">


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_1"
        style="@style/White.Button"
        app:layout_constraintTop_toBottomOf="@id/tv_text_view"
        android:text="Policy"
        android:textAlignment="textStart"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_2"
        style="@style/White.Button"
        app:layout_constraintTop_toBottomOf="@id/btn_1"
        android:text="Product Category"
        android:textAlignment="textStart"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_3"
        style="@style/White.Button"
        app:layout_constraintTop_toBottomOf="@id/btn_2"
        android:text="Origin Country"
        android:textAlignment="textStart"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_4"
        style="@style/White.Button"
        app:layout_constraintTop_toBottomOf="@id/btn_3"
        android:text="Origin Country"
        android:textAlignment="textStart"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/tv_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Policies"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="150dp"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/tv_text_view_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Policies"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/btn_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:textColor="@color/black"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        app:cornerRadius="40dp"
        app:layout_constraintTop_toBottomOf="@id/tv_text_view_one"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Export as CSV"
        android:backgroundTint="@color/red"

        />


</androidx.constraintlayout.widget.ConstraintLayout>